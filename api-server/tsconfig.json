{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowJs": true /* We occasionally need to load CommonJS config files */,
    "checkJs": true /* We occasionally need to load CommonJS config files */,

    "declaration": false,
    "outDir": "./dist",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*", "database/**/*.ts"]
}
